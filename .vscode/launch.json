{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OpenGL Example",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/OpenGLExample.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${env:MINGW_PREFIX}/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}